<UserControl x:Class="EventsProject.Presentation.Components.EventEnrollControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EventsProject.Presentation.Components"
             
             mc:Ignorable="d">

    <!-- RESOURCES -->
    <UserControl.Resources>

        <!-- RESOURCES - BUTTON-->
        <Style TargetType="Button">
            <Setter Property="Height" Value="380"/>
            <Setter Property="Width" Value="320"/>
            <Setter Property="Background" Value="{StaticResource clrMain}"/>
            <Setter Property="BorderBrush" Value="{StaticResource clrTxtSec}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Opacity" Value=".3"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="3" CornerRadius="5" Padding="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="1"/>
                                <Setter Property="BorderBrush" Value="{StaticResource clrTxt}"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="5" BlurRadius="10" Opacity="0.8"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>

    <!-- MAIN LAYOUT -->
    <Button x:Name="btnEnrroll" Click="btnEnrroll_Click" Tag="{Binding}">
        
        <!-- MAIN LAYOUT - EVENTS VIEW - CARD - IMG -->
        <StackPanel DataContext="{Binding Event, RelativeSource={RelativeSource AncestorType=UserControl}}">
            <Border Background="{StaticResource clrMain}" Width="300" Height="250" Margin="0 3"
                BorderBrush="{StaticResource clrTxtSec}" BorderThickness="1">
                <Grid>
                    <Image Source="{Binding EventImg}" Stretch="Fill"/>
                    <Border Background="{StaticResource clrTxt}" HorizontalAlignment="Left" VerticalAlignment="Bottom" 
                        Margin="2" CornerRadius="6">
                        <TextBlock Text="{Binding EventState}" Foreground="{StaticResource clrMain}" FontWeight="Bold" 
                                FontSize="18" TextAlignment="Center"/>
                    </Border>
                </Grid>
            </Border>

            <!-- MAIN LAYOUT - EVENTS VIEW - CARD - INFO -->
            <StackPanel>
                <TextBlock Text="{Binding Title}" FontSize="22" FontWeight="Bold" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                <TextBlock Text="{Binding InitialTime}" HorizontalAlignment="Center"
                       FontSize="14" TextDecorations="Underline" FontStyle="Italic"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="{Binding EventPlace}" FontSize="15" HorizontalAlignment="Center"/>
                    <TextBlock Text=" - " FontSize="12" FontWeight="Bold"/>
                    <TextBlock Text="{Binding EventCity}" FontSize="15" HorizontalAlignment="Center"/>
                </StackPanel>
            </StackPanel>

        </StackPanel>
    </Button>
    
</UserControl>
