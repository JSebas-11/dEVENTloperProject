<UserControl x:Class="EventsProject.Presentation.Components.EventAprobation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EventsProject.Presentation.Components"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             
             mc:Ignorable="d">

    <UserControl.Resources>
        <!-- RESOURCES - EVENTS VIEW -->
        <Style x:Key="txbViewSbTitle" TargetType="TextBlock">
            <Style.Setters>
                <Setter Property="FontSize" Value="15"/>
                <Setter Property="Foreground" Value="{StaticResource clrTxt}"/>
                <Setter Property="Margin" Value="5 0"/>
            </Style.Setters>
        </Style>

        <Style x:Key="txbContentHeader" TargetType="TextBlock">
            <Style.Setters>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="Foreground" Value="{StaticResource clrTxtSec}"/>
                <Setter Property="Margin" Value="5 0 0 0"/>
            </Style.Setters>
        </Style>

        <Style x:Key="txbViewContent" TargetType="TextBlock">
            <Style.Setters>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="Foreground" Value="{StaticResource clrTxt}"/>
                <Setter Property="FontStyle" Value="Italic"/>
                <Setter Property="Margin" Value="5 0"/>
            </Style.Setters>
        </Style>

        <Style x:Key="faView" TargetType="fa:FontAwesome">
            <Style.Setters>
                <Setter Property="Foreground" Value="{StaticResource clrTxt}"/>
                <Setter Property="FontSize" Value="15"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="Margin" Value="5 0 0 0"/>
            </Style.Setters>
        </Style>

    </UserControl.Resources>
    
    <!-- MAIN LAYOUT - EVENTS VIEW - CARD -->
    <Border DataContext="{Binding Event, RelativeSource={RelativeSource AncestorType=UserControl}}" 
            Background="{StaticResource clrMain}" Width="200" Height="350" Margin="5"
            CornerRadius="10" BorderBrush="{StaticResource clrTxtSec}" BorderThickness="1">
        <StackPanel>

            <!-- MAIN LAYOUT - EVENTS VIEW - CARD - INFO -->
            <!-- title -->
            <TextBlock Text="{Binding Title}" Foreground="{StaticResource clrTxt}" FontWeight="Bold" FontSize="18" 
                    TextWrapping="Wrap" Margin="5 0" HorizontalAlignment="Center"/>
            <Border Height="1" Background="{StaticResource clrTxt}"/>

            <!-- time -->
            <StackPanel Orientation="Horizontal">
                <fa:FontAwesome Icon="ClockOutline" Style="{StaticResource faView}"/>
                <TextBlock Text="Time Info:" Style="{StaticResource txbViewSbTitle}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Intial Time:" Style="{StaticResource txbContentHeader}"/>
                <TextBlock Text="{Binding InitialTime}" Style="{StaticResource txbViewContent}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="End Time:" Style="{StaticResource txbContentHeader}"/>
                <TextBlock Text="{Binding EndTime}" Style="{StaticResource txbViewContent}"/>
            </StackPanel>
            <Border Height="1" Background="{StaticResource clrTxt}"/>

            <!-- Spot -->
            <StackPanel Orientation="Horizontal">
                <fa:FontAwesome Icon="LocationArrow" Style="{StaticResource faView}"/>
                <TextBlock Text="Spot Info:" Style="{StaticResource txbViewSbTitle}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Place:" Style="{StaticResource txbContentHeader}"/>
                <TextBlock Text="{Binding EventPlace}" Style="{StaticResource txbViewContent}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="City:" Style="{StaticResource txbContentHeader}"/>
                <TextBlock Text="{Binding EventCity}" Style="{StaticResource txbViewContent}"/>
            </StackPanel>
            <Border Height="1" Background="{StaticResource clrTxt}"/>

            <!-- extra -->
            <StackPanel Orientation="Horizontal">
                <fa:FontAwesome Icon="InfoCircle" Style="{StaticResource faView}"/>
                <TextBlock Text="Extra Info:" Style="{StaticResource txbViewSbTitle}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Capacity:" Style="{StaticResource txbContentHeader}"/>
                <TextBlock Text="{Binding Capacity}" Style="{StaticResource txbViewContent}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Requested by (id):" Style="{StaticResource txbContentHeader}"/>
                <TextBlock Text="{Binding CreatedById}" Style="{StaticResource txbViewContent}"/>
            </StackPanel>
            <Border Height="1" Background="{StaticResource clrTxt}"/>

            <!-- description -->
            <StackPanel Orientation="Horizontal">
                <fa:FontAwesome Icon="FileText" Style="{StaticResource faView}"/>
                <TextBlock Text="Description:" Style="{StaticResource txbViewSbTitle}"/>
            </StackPanel>
            <ScrollViewer VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Disabled" 
                        Height="50" Width="200" Margin="5 0">
                <TextBlock Text="{Binding EventDescription}" TextWrapping="Wrap" Style="{StaticResource txbViewContent}"/>
            </ScrollViewer>
            <Border Height="1" Background="{StaticResource clrTxt}"/>

            <!-- MAIN LAYOUT - EVENTS VIEW - CARD - BUTTONS -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 10">
                
                <Button x:Name="btnApprove" Click="btnApprove_Click" Tag="{Binding}" ToolTip="Approve Event" Background="Green">
                    <fa:FontAwesome Icon="ThumbsUp" FontSize="25"/>
                </Button>
                <Button x:Name="btnDeny" Click="btnDeny_Click" Tag="{Binding}" ToolTip="Deny Event" Background="DarkRed">
                    <fa:FontAwesome Icon="ThumbsDown" FontSize="25"/>
                </Button>

            </StackPanel>

        </StackPanel>
    </Border>

</UserControl>
