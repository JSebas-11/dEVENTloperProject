<Page x:Class="EventsProject.Presentation.UI.Pages.UserEdit"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EventsProject.Presentation.UI.Pages"
      xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
      xmlns:fa="http://schemas.fontawesome.io/icons/"
      
      mc:Ignorable="d" 
      Title="UserEdit">

    <!--MAIN LAYOUT-->
    <Grid x:Name="gdMainContainer">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height=".5*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=".25*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width=".8*"/>
        </Grid.ColumnDefinitions>

        <!--CONTENT LAYOUT - HEADER -->
        <StackPanel Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Orientation="Horizontal" 
                    VerticalAlignment="Center" HorizontalAlignment="Center">
            <fa:FontAwesome Icon="AddressBook" FontSize="50"/>
            <Label Content="Manage your information" Style="{StaticResource fntTitle}"/>
        </StackPanel>
        <fa:FontAwesome Grid.Row="0" Grid.Column="3" Icon="Gear"  Style="{StaticResource fnaAnimatedFade}"/>
        
        <StackPanel Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Width="530">
            <fa:FontAwesome Icon="Info"/>
            <TextBlock Text="Update your information or change your password. Your DNI can't be changed, in that case you should create a new account." 
                        FontSize="20" FontWeight="Bold" Foreground="{StaticResource clrTxtSec}" 
                        TextWrapping="WrapWithOverflow" TextAlignment="Center"/>
        </StackPanel>
        
        <!--CONTENT LAYOUT - INFO SECTION -->
        <StackPanel Grid.Row="2" Grid.Column="1">

            <Border BorderThickness="2" BorderBrush="{StaticResource clrTxt}" Background="{StaticResource clrMain}" 
                    Margin="30" Height="380">
                <StackPanel>
                    <!--CONTENT LAYOUT - INFO SECTION - DNI -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <fa:FontAwesome Icon="IdCard"/>
                        <Label Content="Your DNI:" Style="{StaticResource fntSbTitle}" Foreground="{StaticResource clrTxtSec}"/>
                        <Label Content="{Binding Dni}" Style="{StaticResource fntSbTitle}" Foreground="{StaticResource clrTxt}"/>
                    </StackPanel>

                    <!--CONTENT LAYOUT - INFO SECTION - USERNAME -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <fa:FontAwesome Icon="FileText"/>
                        <Label Content="Current UserName:" Style="{StaticResource fntSbTitle}" Foreground="{StaticResource clrTxtSec}"/>
                    </StackPanel>
                    <Label Content="{Binding UserName}" Style="{StaticResource fntSbTitle}" Foreground="{StaticResource clrTxt}"
                           HorizontalAlignment="Center"/>
                    
                    <!--CONTENT LAYOUT - INFO SECTION - USERNAME -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <fa:FontAwesome Icon="At"/>
                        <Label Content="Current Email:" Style="{StaticResource fntSbTitle}" Foreground="{StaticResource clrTxtSec}"/>
                    </StackPanel>
                    <Label Content="{Binding UserEmail}" Style="{StaticResource fntSbTitle}" Foreground="{StaticResource clrTxt}" 
                           HorizontalAlignment="Center"/>
                    
                    <!--CONTENT LAYOUT - INFO SECTION - IMG -->
                    <Button x:Name="btnChangeImg" Click="btnChangeImg_Click" ToolTip="Change your User Image (You need to reset to see changes applied)"
                            Width="150" Height="150" Margin="0 10">
                        <Image x:Name="imgContainer" Stretch="Fill"/>
                    </Button>
                </StackPanel>
            </Border>
        </StackPanel>

        <!--CONTENT LAYOUT - INPUTS -->
        <StackPanel Grid.Row="2" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center">
            <!--CONTENT LAYOUT - INPUTS - USERNAME -->
            <Label Content="New UserName:" Style="{StaticResource fntSbTitle}" Foreground="{StaticResource clrTxtSec}"/>
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="txbUsername" Style="{StaticResource styTextBox}" Width="450" MaxLength="32"/>
                <Button x:Name="btnConfirmUserName" Click="btnConfirmUserName_Click">
                    <fa:FontAwesome Icon="CheckCircle" Style="{StaticResource fnaAnimatedBtn}"/>
                </Button>
            </StackPanel>
            
            <!--CONTENT LAYOUT - INPUTS - USERNAME -->
            <Label Content="New UserEmail:" Style="{StaticResource fntSbTitle}" Foreground="{StaticResource clrTxtSec}" Margin="0 10 0 0"/>
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="txbUserEmail" Style="{StaticResource styTextBox}" Width="450" MaxLength="32"/>
                <Button x:Name="btnConfirmUserEmail" Click="btnConfirmUserEmail_Click">
                    <fa:FontAwesome Icon="CheckCircle" Style="{StaticResource fnaAnimatedBtn}"/>
                </Button>
            </StackPanel>

            <!--CONTENT LAYOUT - INPUTS - PASSWORD -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 10 0 0">
                <fa:FontAwesome Icon="Lock" Style="{StaticResource fnaAnimatedFade}"/>
                <Label Content="Change Password:" Style="{StaticResource fntSbTitle}" Foreground="{StaticResource clrTxtSec}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <StackPanel Margin="0 0 5 0">
                    <Label Content="New Password:" Style="{StaticResource fntSbTitle}" Foreground="{StaticResource clrTxtSec}"/>
                    <PasswordBox x:Name="pwbPassword" PasswordChar="*" Style="{StaticResource styTextBox}" MaxLength="20" Width="220"/>
                </StackPanel>
                <StackPanel Margin="5 0 0 0">
                    <Label Content="Confirm New Password:" Style="{StaticResource fntSbTitle}" Foreground="{StaticResource clrTxtSec}"/>
                    <PasswordBox x:Name="pwbConfPassword" PasswordChar="*" Style="{StaticResource styTextBox}" MaxLength="20" Width="220"/>
                </StackPanel>
            </StackPanel>

            <Button x:Name="btnConfirmPassword" Click="btnConfirmPassword_Click"  HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 10">
                <StackPanel Orientation="Horizontal">
                    <fa:FontAwesome Icon="CheckCircle" Style="{StaticResource fnaAnimatedBtn}"/>
                    <TextBlock Text="Confirm New Password" Margin="8 0 0 0"/>
                </StackPanel>
            </Button>

        </StackPanel>
        
    </Grid>
    
</Page>
