<Page x:Class="EventsProject.Presentation.UI.Pages.AdminHome"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EventsProject.Presentation.UI.Pages"
      xmlns:fa="http://schemas.fontawesome.io/icons/"
      xmlns:compts="clr-namespace:EventsProject.Presentation.Components"
      
      mc:Ignorable="d"
      Title="AdminHome">

    <!--MAIN LAYOUT-->
    <Grid x:Name="gdContent">
        <Grid.RowDefinitions>
            <RowDefinition Height=".5*"/>
            <RowDefinition Height="2.45*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=".25*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width=".8*"/>
        </Grid.ColumnDefinitions>
        
        <!--MAIN LAYOUT - HEADER -->
        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
            <Border Background="{StaticResource clrMain}" Width="55" Height="55" Margin="0 5 0 0"
                    BorderBrush="{StaticResource clrTxtSec}" BorderThickness="2" CornerRadius="20">
                <Image Source="{Binding UserImg}" Stretch="Fill"/>
            </Border>
            <Label x:Name="lblAdminName" Style="{StaticResource fntTitle}" Foreground="{StaticResource clrTxt}"/>
        </StackPanel>
        <fa:FontAwesome Grid.Row="0" Grid.Column="2" Icon="Tv" Style="{StaticResource fnaAnimatedFade}"/>

        <!--MAIN LAYOUT - DATA CARDS -->
        <StackPanel  Grid.Row="1" Grid.Column="1">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top">
                <Label Content="General Information" Style="{StaticResource fntSbTitle}" Foreground="{StaticResource clrTxtSec}"/>
                <Button x:Name="btnRefresh" Click="btnRefresh_Click">
                    <StackPanel Orientation="Horizontal">
                        <fa:FontAwesome Icon="PieChart" Style="{StaticResource fnaAnimatedBtn}"/>
                        <TextBlock Text="Refresh Metrics" Margin="8 0 0 0"/>
                    </StackPanel>
                </Button>
            </StackPanel>
            
            <WrapPanel Orientation="Horizontal"  HorizontalAlignment="Center">
                
                <!-- SIMPLE CARDS - TOT.USERS  -->
                <compts:SimpleCard x:Name="scTotalUsers" Title="Total Users" Icon="Users"/>
                <!-- SIMPLE CARDS - TOT.EVENTS  -->
                <compts:SimpleCard x:Name="scTotalEvents" Title="Total Events" Icon="Calendar"/>
                <!-- SIMPLE CARDS - ACTIVE EVENTS  -->
                <compts:SimpleCard x:Name="scActiveEvents" Title="Active Events" Icon="CheckCircle"/>
                <!-- SIMPLE CARDS - TODAY EVENTS  -->
                <compts:SimpleCard x:Name="scTodayEvents" Title="Today Events" Icon="CalendarCheckOutline"/>
                
                <!-- DATA CARDS - MOST EVENT  -->
                <Border Style="{StaticResource brdCard}">
                    <StackPanel x:Name="containerEvent">
                        <StackPanel Orientation="Horizontal">
                            <fa:FontAwesome Icon="Fire" Style="{StaticResource fnaBrdCard}"/>
                            <Label Content="Most Enrolled Event" Style="{StaticResource lblBrdCard}"/>
                        </StackPanel>
                        <Label Content="{Binding Title}" Style="{StaticResource lblBrdCard}"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Label Content="{Binding City}" Style="{StaticResource lblBrdCard}"/>
                            <Label Content="-" Style="{StaticResource lblBrdCard}"/>
                            <Label Content="{Binding EnrolledCount}" Style="{StaticResource lblBrdCard}"/>
                            <Label Content="/" Style="{StaticResource lblBrdCard}"/>
                            <Label Content="{Binding Capacity}" Style="{StaticResource lblBrdCard}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                <!-- DATA CARDS - MOST CITY  -->
                <Border Style="{StaticResource brdCard}">
                    <StackPanel x:Name="containerCity">
                        <StackPanel Orientation="Horizontal">
                            <fa:FontAwesome Icon="BuildingOutline" Style="{StaticResource fnaBrdCard}"/>
                            <Label Content="Most Enrolled City" Style="{StaticResource lblBrdCard}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Label Content="{Binding CityName}" Style="{StaticResource lblBrdCard}"/>
                            <Label Content="-" Style="{StaticResource lblBrdCard}"/>
                            <Label Content="{Binding EventsCount}" Style="{StaticResource lblBrdCard}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                <!-- DATA CARDS - MOST CATEGORY  -->
                <Border Style="{StaticResource brdCard}">
                    <StackPanel x:Name="containerCategory">
                        <StackPanel Orientation="Horizontal">
                            <fa:FontAwesome Icon="ListAlt" Style="{StaticResource fnaBrdCard}"/>
                            <Label Content="Most Enrolled CATEGORY" Style="{StaticResource lblBrdCard}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Label Content="{Binding CategoryName}" Style="{StaticResource lblBrdCard}"/>
                            <Label Content="-" Style="{StaticResource lblBrdCard}"/>
                            <Label Content="{Binding EventsCount}" Style="{StaticResource lblBrdCard}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

            </WrapPanel>

        </StackPanel>
       
        <!--MAIN LAYOUT - QUERY -->
        <StackPanel Grid.Row="2" Grid.Column="1">

            <StackPanel>
                <Label Content="Write your own SELECT query" HorizontalContentAlignment="Center"
                       Style="{StaticResource fntSbTitle}"/>

                <StackPanel Orientation="Horizontal">
                    <!--MAIN LAYOUT - QUERY INPUT -->
                    <StackPanel>
                        <TextBox x:Name="txbQuery" TextWrapping="Wrap" AcceptsReturn="True" 
                                 Width="350" Height="180" Style="{StaticResource fntSbTitle}"/>
                        <StackPanel Orientation="Horizontal" Margin="0 5 0 0" HorizontalAlignment="Center">
                            <Button x:Name="btnExecuteQuery" Click="btnExecuteQuery_Click">
                                <StackPanel Orientation="Horizontal">
                                    <fa:FontAwesome Icon="CheckCircle" Style="{StaticResource fnaAnimatedBtn}"/>
                                    <TextBlock Text="Execute" Margin="8 0 0 0"/>
                                </StackPanel>
                            </Button>
                            <Button x:Name="btnClearQuery" Click="btnClearQuery_Click">
                                <StackPanel Orientation="Horizontal">
                                    <fa:FontAwesome Icon="PaintBrush" Style="{StaticResource fnaAnimatedBtn}"/>
                                    <TextBlock Text="Clear" Margin="8 0 0 0"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>

                    <!--MAIN LAYOUT - QUERY VIEW -->
                    <DataGrid x:Name="dgQuery" AutoGenerateColumns="True" IsReadOnly="True"
                              Margin="50 0 0 0" Width="1000"/>

                </StackPanel>

            </StackPanel>

        </StackPanel>
        
    </Grid>
    
</Page>
